<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".ui.OldChatActivity">

    <include
        android:id="@+id/toolbar_old_chat"
        layout="@layout/common_toolbar" />

    <ListView

        android:id="@+id/listviewOldChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_old_chat"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/dp_4_dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/dp_0_dp"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        android:layout_margin="@dimen/dp_2_dp"
        android:windowSoftInputMode="stateVisible|adjustResize"></ListView>
</RelativeLayout>