<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_16_dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/navHeaderImageView"
        android:layout_width="@dimen/dp_150_dp"
        android:layout_height="@dimen/dp_150_dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_png" />

    <TextView
        android:id="@+id/navHeaderUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/navHeaderImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_minus_25_dp"
        android:text="Username"
        android:textColor="@color/black_shade"
        android:textSize="@dimen/sp_18_sp" />

    <TextView
        android:id="@+id/navHeaderUID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/navHeaderUsername"
        android:layout_centerHorizontal="true"
        android:text="UUID"
        android:textColor="@color/black_shade"
        android:textSize="@dimen/sp_14_sp" />
</RelativeLayout>
