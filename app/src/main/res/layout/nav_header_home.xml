<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorAccent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/navHeaderImageView"
        android:layout_width="@dimen/dp_100_dp"
        android:layout_height="@dimen/dp_100_dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_2_dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/navHeaderUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_8_dp"
        android:layout_marginBottom="@dimen/dp_30_dp"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18_sp" />

    <TextView
        android:id="@+id/navHeaderUID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_8_dp"
        android:layout_marginBottom="@dimen/dp_8_dp"
        android:text="UUID"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14_sp" />
</RelativeLayout>
