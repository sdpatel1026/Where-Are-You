<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_15_dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_150_dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_png" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10_dp"
        android:text="@string/welcome"
        android:textAlignment="center"
        android:textColor="@color/black_shade"
        android:textSize="@dimen/sp_30_sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_5_dp"
        android:text="@string/sign_up"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp_25_sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30_dp"
        android:text="@string/user_name"
        android:textColor="@color/black_shade"
        android:textSize="@dimen/sp_20_sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtUserNameSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5_dp"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_20_sp"
        android:backgroundTint="@color/colorAccent"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10_dp"
        android:text="@string/password"
        android:textColor="@color/black_shade"
        android:textSize="@dimen/sp_20_sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtPasswordSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5_dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/colorAccent"
        android:inputType="textPassword"
        android:textSize="@dimen/sp_20_sp" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="@color/black_shade"
        android:layout_marginTop="@dimen/dp_15_dp"
        android:text="@string/sign_up"
        android:textSize="@dimen/sp_20_sp" />

    <TextView
        android:id="@+id/tvSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10_dp"
        android:text="@string/sign_in_if_account"
        android:textColor="@color/black_shade"
        android:textSize="@dimen/sp_15_sp" />
</LinearLayout>


